<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"></meta>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/style/peregrina.css"></link>
        <title>pelegrin</title>
    </head>
    <body>
        <header>
            <nav class="nav nav-bar-nav">
                <li><a class="home-btn" href="/"><i class="glyphicon glyphicon-home"></i></a></li>
            </nav>

            <nav class="nav nav-bar-nav nav-bar-right">
                <li><a href="./logout" title="Logout"><i class="glyphicon glyphicon-log-out"></i></a></li>
            </nav>
        </header>
        <section class="placeholder"></section>
        <section>
            <%
            foreach ($item in $model.items) {
                if ($item.Image) {
                    $image = "<img src='data:image/png;base64,$($item.Image)' alt='$($item.Name)' />"
                } else {
                    $image = ""
                }

                "<a href='$($item.Url)' class='rootlink' style='background-blend-mode:soft-light;background-size:cover;background-image: url(data:image/png;base64,$($item.Image));'>
                    $($item.Name)
                </a>"
            }
            %>
        </section>
        <footer><a href="https://github.com/VargaJoe/ePeregrina-server-ps" class="poweredby">powered by ePeregrina</a></footer>
    </body>
</html>
